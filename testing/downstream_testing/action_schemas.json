{
    "pytest-django": {
        "matrix": [
            "matrix",
            "include"
        ],
        "tox_cmd_build": {
            "base": "name",
            "prefix": "py",
            "sub":
                {
                    "pattern": "-coverage$",
                    "replace": ""
                }
        }
    },
    "pytest-html": {
        "matrix": [
            "matrix",
            "include"
        ],
        "tox_cmd_build": {
            "base": "name",
            "prefix": "py",
            "sub":
                {
                    "pattern": "(py\\d+)-\\w+",
                    "replace": "\\1"
                }
        }
    },
    "pytest-order": {
        "matrix": [
            "matrix",
            "python-version"
        ],
        "tox_cmd_build": {
            "base": "",
            "prefix": "",
            "sub":
                {
                    "pattern": "(\\d|py\\d)\\.*(\\d+)",
                    "replace": "py\\1\\2"
                }
        }
    },
    "pytest-mock": {
        "matrix": [
            "matrix",
            "python"
        ],
        "tox_cmd_build": {
            "base": "",
            "prefix": "",
            "sub":
                {
                    "pattern": "(\\d|py\\d)\\.*(\\d+)",
                    "replace": "py\\1\\2"
                }
        }
    },
    "pytest-cov": {
        "matrix": [
            "matrix",
            "python-version"
        ],
        "tox_cmd_build": {
            "base": "",
            "prefix": "",
            "sub":
                {
                    "pattern": "^\\d\\.(\\d+)(?:-dev)*",
                    "replace": "py3\\1"
                }
        }
    }
}
